# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
max_line_length = 90

[**.py]
indent_size = 4

[**.yaml]
indent_size = 2

[**.js]
indent_size = 2

[**.scss]
indent_size = 2

[**.bat]
indent_style = space
indent_size = 4
end_of_line = crlf

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
